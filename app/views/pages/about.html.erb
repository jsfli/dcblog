        <p>
          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#jobHistory"
            aria-expanded="false"
            aria-controller="jobHistory"
          >
            Job History
          </button>

          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#education"
            aria-expanded="false"
            aria-controller="education"
          >
            Education
          </button>

          <button
            class="btn btn-primary"
            type="button"
            data-toggle="collapse"
            data-target="#hobbies"
            aria-expanded="false"
            aria-controller="hobbies"
          >
            Hobbies
          </button>
        </p>

        <p>
          <div class="collapse" id="jobHistory">
            <div class="card card-block">
              Probably unemployable
            </div>
            <div class="card card-block">
              Currently unemployed
            </div>
            <div class="card card-block">
              Never been employed
            </div>
          </div>

          <div class="collapse" id="education">
            <div class="card card-block">
              福建大學
            </div>
            <div class="card card-block">
              福建中學
            </div>
            <div class="card card-block">
              福建小學
            </div>
          </div>

          <div class="collapse" id="hobbies">
            <div class="card card-block">
              Hobby 1
            </div>
            <div class="card card-block">
              Hobby 2
            </div>
            <div class="card card-block">
              Hobby 3
            </div>
          </div>
        </p>
      </div>
    </div>
  </div>
</div>
