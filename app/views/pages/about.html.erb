<div class="app-card-container">
  <div class="card">
    <h3>About Me</h3>

    <hr>
    <div class="row">
      <div class="col-md-5">
        <%= image_tag "Profile.jpg", width: 380, alt: "Profile Image", class: 'profile-img'%>
        <div class="skills">
          <h3>Skillset</h3>
          <% @skills.each do |skill| %>
          <div class="skill">
            <h4><%=skill.title%></h4>
            <div class="progress">
              <div class="progress-bar progress-bar-striped bg-warning"
                   role="progressbar"
                   aria-valuenow="<%= skill.percent_utilized %>"
                   aria-valuemax="100"
                   style="width: <%= skill.percent_utilized %>%"
              ></div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-7">
